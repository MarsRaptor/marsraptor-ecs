{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "removeComments": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true
    },
    
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}